<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/deviceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/device" />

    <Button
        android:id="@+id/downloadOfficialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deviceText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/lofficial" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" />

    <WebView
        android:id="@+id/officialWebView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp" 
        android:layout_below="@id/downloadOfficialButton"/>

</RelativeLayout>